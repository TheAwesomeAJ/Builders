source "https://rubygems.org"

# Rails 8
gem "rails", "~> 8.1.2"

# PostgreSQL adapter
gem "pg", "~> 1.1"

# Puma web server
gem "puma", ">= 5.0"

# Build JSON APIs with ease
gem "jbuilder"

# Image processing (Active Storage)
gem "image_processing", "~> 1.2"

# Solid gems for cache, queue, and cable
gem "solid_cache"
gem "solid_queue"
gem "solid_cable"

# Boot performance
gem "bootsnap", require: false

# Optional: deploy via Docker
gem "kamal", require: false

# Optional: HTTP asset caching/compression for Puma
gem "thruster", require: false

# Timezone data for Windows
gem "tzinfo-data", platforms: %i[windows jruby]

# Optional: security & linting tools for development/test
group :development, :test do
  # Debugging
  gem "debug", platforms: %i[mri windows], require: "debug/prelude"

  # Environment variables from .env (auto-loaded in dev/test)
  gem "dotenv-rails"

  # Security auditing
  gem "bundler-audit", require: false
  gem "brakeman", require: false

  # Linting/styling
  gem "rubocop-rails-omakase", require: false
end